{
    "name": "azuriom/shop",
    "type": "azuriom-plugin",
    "description": "Complete shop plugin for your server",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Azuriom\\Plugin\\Shop\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "require": {
        "php": ">=8.0",
        "mercadopago/dx-php": "^3.0",
        "mollie/mollie-api-php": "^2.12.0",
        "paymentwall/paymentwall-php": "^2.2",
        "stripe/stripe-php": "^15.10",
        "xsolla/xsolla-sdk-php": "^4.1"
    },
    "replace": {
        "guzzlehttp/guzzle": "*",
        "psr/log": "*",
        "symfony/http-foundation": "*"
    },
    "config": {
        "optimize-autoloader": true,
        "platform-check": false
    }
}
